@{
    ViewData["Title"] = "Técnico";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Components/vistas.css" />
}

@await Html.PartialAsync("Components/_Sidebar")

<!-- Dashboard Content -->
<div class="mt-3 container">

    @await Html.PartialAsync("Components/_Welcome")

    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-sm-6">
            <div class="card stat-card bg-principal text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Tickets Asignados</h6>
                            <h2 class="mb-0">12</h2>
                        </div>
                        <i class="bi bi-ticket h1 mb-0"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card stat-card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Resueltas hoy</h6>
                            <h2 class="mb-0">89</h2>
                        </div>
                        <i class="bi bi-check-circle h1 mb-0"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card stat-card bg-dark text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Tiempo promedio</h6>
                            <h2 class="mb-0">2.5h</h2>
                        </div>
                        <i class="bi bi-stopwatch h1 mb-0"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card stat-card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">En aprobación</h6>
                            <h2 class="mb-0">10</h2>
                        </div>
                        <i class="bi bi-file-earmark-check h1 mb-0"></i>
                    </div>
                </div>
            </div>
        </div>
    </div> 

    <!-- Tickets Asignados y Actividad -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Tickets Asignados</h5>
                    <div class="btn-group">
                        <button class="btn btn-sm btn-outline-primary">Todos</button>
                        <button class="btn btn-sm btn-outline-primary">Pendientes</button>
                        <button class="btn btn-sm btn-outline-primary">En Progreso</button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="ticket-card card mb-3 priority-high">
                        <div class="card-body">
                            <span class="status-badge badge bg-warning">En Progreso</span>
                            <h6 class="card-title">#TK001 - Error en Sistema de Pagos</h6>
                            <p class="card-text small">Reportado por: Juan Pérez - Hace 2 horas</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-danger">Alta Prioridad</span>
                                <button class="btn btn-sm btn-primary">Ver Detalles</button>
                            </div>
                        </div>
                    </div>
                    <div class="ticket-card card mb-3 priority-medium">
                        <div class="card-body">
                            <span class="status-badge badge bg-primary">Nuevo</span>
                            <h6 class="card-title">#TK002 - Problemas con el Login</h6>
                            <p class="card-text small">Reportado por: María García - Hace 4 horas</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-warning">Media Prioridad</span>
                                <button class="btn btn-sm btn-primary">Ver Detalles</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Actividad Reciente</h5>
                </div>
                <div class="card-body">
                    <div class="activity-timeline">
                        <div class="activity-item">
                            <p class="mb-1"><strong>Ticket #TK001 actualizado</strong></p>
                            <small class="text-muted">Hace 30 minutos</small>
                        </div>
                        <div class="activity-item">
                            <p class="mb-1"><strong>Nuevo ticket asignado #TK002</strong></p>
                            <small class="text-muted">Hace 2 horas</small>
                        </div>
                        <div class="activity-item">
                            <p class="mb-1"><strong>Ticket #TK003 resuelto</strong></p>
                            <small class="text-muted">Hace 3 horas</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>