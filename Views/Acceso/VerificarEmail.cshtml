@model v1.Models.ViewModels.ResetPasswordCodeViewModel

@{
    ViewData["Title"] = "Verificar Email";
}

<div class="form-signin m-auto mt-5">

    <div class="container mt-1 mb-3">
        <div class="row d-flex align-items-stretch">
            <div class="col-8 text-start d-flex flex-column justify-content-center"
                style="border-radius: 8px;">
                <h3 class="fw-bold">Restablecer Contraseña</h3>
            </div>

            <div class="col-4 text-end d-flex flex-column justify-content-center" 
                style="border-radius: 8px; background-color: #0d1321;">
                <img src="~/img/desk_core_nombre_w.svg" alt="Desk Core" height="70">
            </div>
        </div>
    </div>

     <div class="alert alert-primary text-center">
        <p class="fw-bold text-center m-auto">Ingrese el código enviado al correo electrónico.</p>
    </div>

    <form asp-action="VerificarEmail" method="post">
        @{/*<div asp-validation-summary="All" class="text-danger"></div>*/}
        
        <div class="form-floating">
            <input asp-for="Email" class="form-control principal-input mbrl-0" readonly />
            <label asp-for="Email">Correo Electrónico</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="form-floating">
            <input type="number" asp-for="Code" class="form-control principal-input mtrl-0" placeholder="Code" />
            <label asp-for="Code">Código</label>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <br>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-principal">Confirmar</button>
        </div>
    </form>
</div>