@using System.Security.Claims
@{
    ViewData["Title"] = "Administrador";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Components/vistas.css" />
}

@await Html.PartialAsync("Components/_Sidebar")

<!-- Dashboard Content -->
<div class="mt-3 container">

    @await Html.PartialAsync("Components/_Welcome")

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        
        <div class="col-xl-3 col-sm-6">
            <div class="card stat-card bg-principal text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Incidencias Totales</h6>
                            <h2 class="mb-0">124</h2>
                        </div>
                        <i class="bi bi-ticket h1 mb-0"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card stat-card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Resueltas</h6>
                            <h2 class="mb-0">89</h2>
                        </div>
                        <i class="bi bi-check-circle h1 mb-0"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card stat-card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">En Progreso</h6>
                            <h2 class="mb-0">25</h2>
                        </div>
                        <i class="bi bi-clock-history h1 mb-0"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6">
            <div class="card stat-card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Críticas</h6>
                            <h2 class="mb-0">10</h2>
                        </div>
                        <i class="bi bi-exclamation-triangle h1 mb-0"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Incidents & Quick Actions -->
    <div class="row">
        <!-- Recent Incidents -->
        <div class="col-xl-8 mb-4">
            <div class="card shadow-sm">
                
                <div class="card-header">
                    <h5 class="card-title mb-0 fw-medium">Incidencias Recientes</h5>
                </div>

                <div class="card-body">
                    <div class="card mb-3 incident-priority-high">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">#INC-001 Error en Producción</h6>
                                    <small class="text-muted">Reportado por: Juan Pérez - Hace 2 horas</small>
                                </div>
                                <span class="badge bg-danger">Alta</span>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-3 incident-priority-medium">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">#INC-002 Bug en Dashboard</h6>
                                    <small class="text-muted">Reportado por: María García - Hace 4 horas</small>
                                </div>
                                <span class="badge bg-warning">Media</span>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3 incident-priority-low">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">#INC-003 Mejora en UI</h6>
                                    <small class="text-muted">Reportado por: Carlos López - Hace 6 horas</small>
                                </div>
                                <span class="badge bg-success">Baja</span>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3 incident-priority-low">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">#INC-003 Mejora en UI</h6>
                                    <small class="text-muted">Reportado por: Carlos López - Hace 6 horas</small>
                                </div>
                                <span class="badge bg-success">Baja</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-xl-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Administrador" asp-action="addticket" class="btn btn-principal">
                            <i class="bi bi-plus-circle me-2"></i>Nueva Incidencia
                        </a>
                        <button class="btn btn-outline-principal">
                            <i class="bi bi-file-earmark-text me-2"></i>Generar Reporte
                        </button>
                        <button class="btn btn-outline-principal">
                            <i class="bi bi-people me-2"></i>Asignar Tareas
                        </button>
                        <button class="btn btn-outline-principal">
                            <i class="bi bi-people me-2"></i>Asignar Tareas
                        </button>
                    </div>
                </div>
            </div>

            <!-- System Status -->
            <div class="card shadow-sm mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Estado del Sistema</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center"
                            style="background-color: transparent;">
                            API
                            <span class="badge bg-success rounded-pill">Operativo</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Base de Datos
                            <span class="badge bg-success rounded-pill">Operativo</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Servidor Web
                            <span class="badge bg-success rounded-pill">Operativo</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>